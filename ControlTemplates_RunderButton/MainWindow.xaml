<Window x:Class="ControlTemplates_RunderButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlTemplates_RunderButton"
        mc:Ignorable="d"
        Title="MainWindow" Width="525">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template" Value="{StaticResource runderButtonTrigger}" />
            <Setter Property="Background" Value="Green" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <Button Height="200" Width="100" HorizontalAlignment="Center" Background="Yellow" >
            Test
        </Button>
        <Button Background="Red" Height="100" Width="150"  HorizontalAlignment="Center" Click="Button_Click"  >
            RunderButton
        </Button>
    </StackPanel>
</Window>
